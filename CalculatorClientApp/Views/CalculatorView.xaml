<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorClientApp.Views.CalculatorView"
             Title="CalculatorView">
    <VerticalStackLayout>
        <Editor Placeholder="First Val"
            Text="{Binding FirstVal}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Editor Placeholder="Op"
            Text="{Binding Op}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Editor Placeholder="Second Val"
            Text="{Binding SecondVal}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Solve" Command="{Binding SolveCommand}"></Button>
        <Label Text="{Binding Result}" FontSize="Large" HorizontalOptions="Center"></Label>
    </VerticalStackLayout>
</ContentPage>